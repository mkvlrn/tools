    "@vitest/coverage-v8": "^4.0.17",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsc-files": "^1.1.4",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
