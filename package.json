{
  "name": "tools",
  "description": "Assorted typescript tools for whatever",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/tools"
  },
  "keywords": [
    "node",
    "typescript",
    "tools"
  ],
  "engines": {
    "node": "24"
  },
  "scripts": {
    "build": "pnpm -r --parallel build",
    "test": "vitest run",
    "biome-check": "biome check --diagnostic-level=warn --no-errors-on-unmatched",
    "biome-fix": "pnpm biome-check --write",
    "typecheck": "pnpm -r --parallel typecheck",
    "prepare": "husky",
    "changeset-publish": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsc-files": "^1.1.4",
    "typescript": "6.0.0-beta",
    "vitest": "^4.0.18"
  }
}
