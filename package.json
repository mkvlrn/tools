  "type": "module",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/tools"
  },
  "keywords": [
    "node",
    "typescript",
    "tools"
  ],
  "engines": {
    "node": "24"
  },
  "scripts": {
