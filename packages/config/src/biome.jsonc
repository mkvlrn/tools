{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "root": false,
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "off",
        "useSortedProperties": "on"
      }
    }
  },
  "javascript": {
    "parser": {
      // for nest decorators
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "lineEnding": "lf",
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "domains": {
      "next": "none",
      "playwright": "none",
      "project": "recommended",
      "qwik": "none",
      "react": "recommended",
      "solid": "none",
      "test": "recommended",
      "turborepo": "none",
      "types": "recommended",
      "vue": "none"
    },
    "rules": {
      "a11y": "on",
      "complexity": "on",
      "correctness": "on",
      "nursery": "off",
      "performance": "on",
      "security": "on",
      "style": "on",
      "suspicious": "on"
    }
  },
  "overrides": [
    {
      "includes": ["**/*"],
      "linter": {
        "rules": {
          "complexity": {
            // because of typescript's noPropertyAccessFromIndexSignature
            "useLiteralKeys": "off"
          },
          "correctness": {
            // path alias already uses ts extensions
            "useImportExtensions": "off",
            // TODO: check on new versions
            // biome 2.4 seems to have broken this for node imports, using the ts check for now
            // still present in 2.4.2
            "noUnresolvedImports": "off"
          },
          "style": {
            // this is a silly rule
            "useExportsLast": "off"
          }
        }
      }
    },
    {
      // test files, config files, and some scripts
      // should be able to import from node
      "includes": ["**/*.config.ts", "**/*.test.ts", "**/*.spec.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noNodejsModules": "off"
          }
        }
      }
    },
    {
      // config files should be able to export defaults as per tooling requirements
      "includes": ["**/*.config.ts"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
