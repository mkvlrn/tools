{
  "name": "@mkvlrn/env",
  "description": "Environment variable parser powered by zod",
  "version": "1.0.7",
  "license": "MIT",
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/tools"
  },
  "keywords": [
    "node",
    "typescript",
    "env"
  ],
  "engines": {
    "node": "24.x"
  },
  "files": [
    "build"
  ],
  "exports": {
    "types": "./build/index.d.ts",
    "default": "./build/index.js"
  },
  "scripts": {
    "build": "vite build",
    "dev": "tsx --watch src/main.ts",
    "start": "node build/bundle.js",
    "test": "vitest",
    "biome-check": "biome check --no-errors-on-unmatched",
    "biome-fix": "npm run biome-check --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "rollup-plugin-node-externals": "^8.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "zod": "^4.0.14"
  },
  "peerDependencies": {
    "zod": "^4.0.14"
  }
}
