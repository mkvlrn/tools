{
  "name": "@mkvlrn/result",
  "description": "Simple Result type/pattern for TypeScript",
  "version": "4.0.8",
  "license": "MIT",
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/tools"
  },
  "keywords": [
    "node",
    "typescript",
    "result"
  ],
  "engines": {
    "node": "24.x"
  },
  "files": [
    "build"
  ],
  "exports": {
    "types": "./build/index.d.ts",
    "default": "./build/index.js"
  },
  "scripts": {
    "build": "vite build",
