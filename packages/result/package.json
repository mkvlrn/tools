{
  "name": "@mkvlrn/result",
  "description": "Simple Result type/pattern for TypeScript",
  "version": "5.0.4",
  "license": "MIT",
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@proton.me>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/tools"
  },
  "keywords": [
    "node",
    "typescript",
    "result"
  ],
  "engines": {
    "node": "24"
  },
  "files": [
    "build"
  ],
  "imports": {
    "#*": {
      "dev": "./src/*.ts",
      "default": "./build/*.js"
    }
  },
  "exports": {
    "types": "./build/index.d.ts",
    "default": "./build/index.js"
  },
  "scripts": {
    "build": "rm -rf build && tsc --project tsconfig.build.json",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "lint-staged": "^16.2.7",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "vitest": "^4.0.16"
  }
}
